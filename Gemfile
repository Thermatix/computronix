source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '>= 4.0.0'

# Postgres as the database for Active Record
gem 'pg'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.0'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'

# an an interface between Ruby and ImageMagick
gem "rmagick", "~> 2.13.2"

#for tab based navigation
gem "tabs_on_rails"

#for paypal authentication
gem "omniauth-paypal"

#PayPal Rest API
gem 'paypal-sdk-rest'

#for currency conversion
gem "google_currency", "~> 2.3.0"

#for slugs
gem "friendly_id"#, "~> 4.0.10.1"

gem "oauth", "~> 0.4.7"

 gem 'navGATE', path: "/Users/marbecker/.rvm/gems/ruby-2.0.0-p247/gems/navGATE-0.1.13"

group :development, :test do
  # Use debugger
  gem 'debugger'
  #for debugging
  gem 'awesome_print'
  #for random values for testing
  gem "faker"
  #for testing
  gem 'rspec'
end



group :test do
  gem 'rspec-rails', '~> 2.0'
  gem "factory_girl_rails", "~> 4.0"
  gem "capybara"
  gem "email_spec"
  gem "poltergeist"
  gem "database_cleaner"
  gem "simplecov"
end


# See https://github.com/sstephenson/execjs#readme for more supported runtimes
gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 1.2'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

