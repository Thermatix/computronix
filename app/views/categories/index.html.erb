<h1><%= @category.nil? ? 'Main categories' : @category.title %></h1>
<section class='bar'>
  <% if child? %>
    <%= link_to 'back', first_child_catagory? if child? %> | <%= link_to 'new sub-category', new_category_path(@category) if @category.ancestors.length < 3 %>
  <% else %>
  <%= link_to 'back', :setup %> |
    <%= link_to 'new root-category', [:new, :category] %>
  <% end %>
</section>
<table>
  <% @categories.each do |category| %>
  <tr>
    <td><%= link_to category.title, category_path(category) %></td>
    <td><%= link_to 'Edit', [:edit,category] %></td>
    <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure? this will also delete all child catagories'}%></td>
  </tr>
  <% end %>
</table>

